@model SaloonVM
@{
    ViewBag.Title = "SaloonList";
}




<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Salon İşlemleri</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
          
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Salonlar</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-muted font-13 m-b-30">
                            Bütün bütün salonları görebilir işlem yapabilirsiniz.
                        </p>

                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Salon No </th>

                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Saloon item in Model.Saloons)
                                {
                                    <tr>
                                        <td>@item.SaloonNo</td>
                                        




                                        @*<td>@item.CreatedDate</td>*@
                                        <td><a href="@Url.Action("UpdateSaloon","Saloon",new { Area="Panel",id=item.ID})" class="btn btn-warning"><i class="fa fa-edit"></i></a><a href="@Url.Action("DeleteSaloon","Saloon",new { Area="Panel",id=item.ID})" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>

                                    </tr>
                                }

                            </tbody>
                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


