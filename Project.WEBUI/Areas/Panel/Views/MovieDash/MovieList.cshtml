@model MovieVM
@{
    ViewBag.Title = "MovieList";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Filmler</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Çalışanlar</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-muted font-13 m-b-30">
                            Bütün Filmleri buradan görüntüleyebilir ve işlem yapabilirsiniz.
                        </p>

                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Film ismi</th>

                                    <th>Yönetmen</th>

                                    <th>Film tarihi</th>

                                    <th>Süre</th>
                                    <th>Film türü</th>

                                    <th>Fotoğraf</th>
                                    <th>Tarih</th>

                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Movie item in Model.Movies)
                                {
                                    <tr>
                                        <td>@item.MovieName</td>

                                        @if (item.Director != null)
                                        {
                                            <td>@item.Director.FirstName</td>
                                        }
                                        <td>@item.MovieYear</td>
                                        <td>@item.MovieLength</td>
                                        @if (item.Genre != null)
                                        {
                                            <td>@item.Genre.GenreName</td>
                                        }
                                        else
                                        {
                                            <td>Film türü belirtilmemiş</td>
                                        }
                                        @if (item.MovieImagePath == null)
                                        {
                                            <td>
                                                <img src="~/Areas/Panel/PanelTools/img/seko.jpg" />

                                            </td>
                                        }
                                        else
                                        {
                                            <td><img width="150" height="50" title="@item.MovieName" src="@item.MovieImagePath" /></td>
                                        }







                                        <td>@item.CreatedDate</td>
                                        <td><a href="@Url.Action("UpdateMovie","MovieDash",new { Area="Panel",id=item.ID})" class="btn btn-warning"><i class="fa fa-edit"></i></a><a href="@Url.Action("DeleteMovie","MovieDash",new { Area="Panel",id=item.ID})" class="btn btn-danger"><i class="fa fa-trash"></i></a><a href="@Url.Action("AddMovie","MovieDash",new {Area = "Panel",item = item.ID})" class="btn btn-primary"><i class=" fa fa-file"></i></a></td>
                                       
                                    </tr>
                                }


                            </tbody>
                        </table>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


