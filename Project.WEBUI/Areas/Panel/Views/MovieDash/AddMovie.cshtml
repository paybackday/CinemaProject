@model MovieVM
@{
    ViewBag.Title = "AddMovie";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Film Ekleme İşlemleri</h3>
            </div>


        </div>
        <div class="clearfix"></div>

        <div class="row form-horizontal form-label-left">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Film Ekleme Sayfası <small></small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>

                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        @using (Html.BeginForm("AddMovie", "MovieDash", new { Area = "Panel" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {

                           <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Film ismi <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.Movie.MovieName, new { @class = "form-control col-md-7 col-xs-12" })
                                    <span class="fa fa-user form-control-feedback right"></span>
                                    @Html.ValidationMessageFor(x => x.Movie.MovieName)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Süre <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.Movie.MovieLength, new { @class = "form-control col-md-7 col-xs-12" })
                                    <span class="fa fa-user form-control-feedback right"></span>
                                    @Html.ValidationMessageFor(x => x.Movie.MovieLength)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                    Film Tarih <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.Movie.MovieYear, new { @class = "form-control col-md-7 col-xs-12" })
                                    <span class="fa fa-user fa fa-user form-control-feedback right"></span>
                                    @Html.ValidationMessageFor(x => x.Movie.MovieYear)
                                </div>
                            </div>



                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                    Film Tür <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.DropDownListFor(x => x.Movie.GenreID, new SelectList(Model.Genres, "ID", "GenreName"), new { @class = "form-control col-md-7 col-xs-12" })
                                    <span class="fa fa-user fa fa-user form-control-feedback right"></span>


                                </div>
                            </div>



                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Yönetmen <span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.Movie.Director.FirstName, new { @class = "form-control col-md-7 col-xs-12" })
                                    @Html.ValidationMessageFor(x => x.Movie.Director.FirstName)
                                    <span class="fa fa-envelope form-control-feedback right"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Açıklama <span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(x => x.Movie.Description, new { @class = "form-control col-md-7 col-xs-12" })
                                    @Html.ValidationMessageFor(x => x.Movie.Description)
                                    <span class="fa fa-envelope form-control-feedback right"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> <span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label class="col-sm-2 col-sm-2 control-label">Resim Seçiniz</label>
                                    <div class="col-sm-4">
                                        <input type="file" name="resim" class="form-control genislik" />
                                    </div>
                                    <span class="fa fa-envelope form-control-feedback right"></span>
                                </div>
                            </div>





                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="submit" class="btn btn-success">Film Ekle</button>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>





    </div>
</div>



