@model EmployeeVM
@{
    ViewBag.Title = "EmployeeList";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Çalışan İşlemleri</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Çalışanlar</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-muted font-13 m-b-30">
                            Bütün çalısanların bilgilerini görebilirsiniz.
                        </p>

                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Tcno</th>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>E-Mail</th>
                                    <th>Telefon</th>
                                    <th>Role</th>
                                    <th>Kayıt Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Employee item in Model.Employees)
                                {
                                    <tr>
                                        <td>@item.TCNO</td>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.MobilePhone</td>
                                        <th>@item.EmployeeType</th>



                                        <td>@item.CreatedDate</td>
                                        <td><a href="@Url.Action("EmployeeRoleUpdate","EmployeeBoss",new { Area="PanelBoss",id=item.ID})" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                        
                                    </tr>
                                }

                            </tbody>
                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



