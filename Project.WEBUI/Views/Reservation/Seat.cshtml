<script>
    function viewCheckOutPage() {
        var buyedSeats = $(".sits-state--your");

        var seats = "";
        for (var i = 1; i < buyedSeats.length; i++) {
            seats += $(buyedSeats[i]).data("place") + ":";
        }

        if (seats == "") {
            swal({
                title: "Koltuk Seçimi!",
                text: "Koltuk seçiminizi yapmadınız",
                icon: "warning",
                button: "Tamam",
                dangerMode: true
            });
        }
        else if ($("#choise").val() == "") {
            swal({
                title: "Rezervasyon/Satis Seçimi!",
                text: "Rezervasyon veya satis secimi yapmadınız",
                icon: "warning",
                button: "Tamam",
                dangerMode: true
            });
        }
        else {
            $("#selectedSeats").val(seats);
            $("#checkoutView").submit();
        }


    }


    //Reservation or Sale Select Function

    function choise(selected) {
        //1 Sale
        //2 Reservation
        $("#choise").val(selected);




    }


</script>